{
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "globals": {
    "$": true,
    "Waypoint": true,
    "document": true,
    "window": true
  },
  "rules": {
    "indent": [0, 2, { "SwitchCase": 1 }],
    "quotes": [2, "single"],
    "linebreak-style": [2, "unix"],
    "semi": [2, "never"],
    "comma-dangle": [1, "never"],
    "no-trailing-spaces": [2, { "skipBlankLines": true }],
    "no-console": 0
  },
  "env": {
    "node": true
  }
}
